{
  "manifest_version": 3,
  "name": "Feedly AI Overlay",
  "version": "0.1.0",
  "description": "Overlay local AI scores in Feedly web UI",
  "permissions": ["storage", "scripting", "nativeMessaging"],
  "host_permissions": [
    "https://feedly.com/*",
    "https://cloud.feedly.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://feedly.com/*", "https://cloud.feedly.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
